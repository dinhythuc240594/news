# Configuration file cho ứng dụng News
# Copy file này thành .env và điền các giá trị thực tế cho môi trường của bạn
# Command Windows: copy env.example .env
# Command Linux/Mac: cp env.example .env

# Secret Key - Thay đổi giá trị này trong production!
# Sử dụng: python -c "import secrets; print(secrets.token_hex(32))" để tạo secret key an toàn
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:123456@localhost:5432/newsdb

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
MAIL_SUBJECT_PREFIX=[News] 

